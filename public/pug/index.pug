      // Logo & Results
      #logo-results-section.dark-theme
        .container
          h2.gl Impact the Numbers that Matter
          .divide
            .box
              .number 62%
              .details Reduction in costs per hire
              .logo: img(src="./images/homepage-result/alorica.png", alt="Alorica")
            .box
              .number 73%
              .details Reduction in time to hire
              .logo: img(src="./images/homepage-result/starwood.png", alt="Starwood Group")
