//- Global Variable Start
- var pageCode = "career-bot-demo"
- var pageDescription = "Ready to accelerate recruitment? Talkpush is the leading productivity platform and the most high-volume chatbot for hiring talent via Facebook, WeChat and messaging."
include ./_variables.pug
//- Global Variable End

doctype
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="description", content=pageDescription)
        meta(name="keywords" content=metaKeywords)
        title #{siteTitle} - Jobs
        link(type="text/css", rel="StyleSheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
        link(type="text/css", rel="StyleSheet", href="https://fonts.googleapis.com/css?family=Dosis")
        link(type="text/css", rel="StyleSheet", href="./dist/_app.css")
        if favicon
            link(rel="shortcut icon", href=favicon, type="image/x-icon")

        // Open Graph Start
        meta(property="og:title", content=siteTitle)
        if siteImage
            meta(property="og:image", content=siteImage)
        meta(property="og:description", content=pageDescription)
        // Open Graph End

        <!--[if lt IE 9]>
        script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
        script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
        <![endif]-->

    body
      // Header
      header
        .container
            .divider
                .logo
                    a(href="./").logo
                        span Talk Push Logo
                    a(href="#").menu-button
                        i(class="fa fa-bars",aria-hidden="true")
                .menu
                    include ./_navigation.pug

      .display-header.jobs
        .filter
          .fade
            h1 We're hiring
            h3 Thinking about working at Talkpush? We want to learn more about you so we can decide if there is a potential career for you at Talkpush. Talk to our recruitment agent Stanley  below and start that conversation NOW.
            ul#crb-buttons
              li: a(href="#").hiring
                i.fa.fa-info-circle.fa-fw
                span Hiring Process
              li: a(href="#").culture
                i.fa.fa-coffee.fa-fw
                span Our Culture
              li: a(href="#").where
                i.fa.fa-globe.fa-fw
                span Where Are We?

      .crb-open-message

      #talkpush-bot.crb

      // Pop-up
      #dark-filter
        #pop-up-aligner
          #pop-up(style="padding:0;overflow:hidden;max-width:500px;")
            .close-and-title(style="margin:0;")
                a(href="#", style="color:#fff;z-index:9999;").close-button.crb: i.fa.fa-times.fa-fw(aria-hidden='true')
            #crb-pop-up-content

