    body
      // Header
      header
        .container
            .divider
                .logo
                    a(href="./").logo
                        span Talk Push Logo
                    a(href="#").menu-button
                        i(class="fa fa-bars",aria-hidden="true")
                .menu
                    include ./_navigation.pug

      .display-header.crm
        .filter
            h1.fade Candidate Relationship Management<br />for the messaging age

      .container
        form.whatsapp-form
          // Full Name
          input(type="text", name="name", placeholder="Full Name")
          // E-mail
          input(type="text", name="email", placeholder="E-mail")
          // Phone Number
          input(type="text", name="phone", placeholder="Phone Number")
          // Company Name
          input(type="text", name="company", placeholder="Company Name")
          // Recruitment Volume
          input(list="whatsapp-form-volume", name="volume", placeholder="Annual Recruitment Volume")
          datalist#whatsapp-form-volume
            option(value="1-100")
            option(value="100-1000")
            option(value="1000-10000")
            option(value="More than 10k")
          // In Touch Button
          input#whatsapp-form-in-touch(type="checkbox", name="in-touch", value="In Touch")
          label(for="whatsapp-form-in-touch") I would like to stay in touch with Talkpush through digital communication
          // Submit Button
          input(type="submit", value="Submit")
        p You may opt-out at anytime by sending as an unsubscribe request.


      // Footer Section
      include ./_footer.pug

      // Scripts Section
      script(src="./dist/_app.js")