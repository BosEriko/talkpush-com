    body
      // Header
      header
        .container
            .divider
                .logo
                    a(href="./").logo
                        span Talk Push Logo
                    a(href="#").menu-button
                        i(class="fa fa-bars",aria-hidden="true")
                .menu
                    include ./_navigation.pug

      .display-header.accelerate
        .filter
          .container
            h1 Reduce your time to hire and your cost per hire by up to 70% with messaging recruitment
            .divider
              .video
                .video-holder: iframe(width='560', height='315', src='https://www.youtube.com/embed/RWMQZNeFaEY', frameborder='0', allowfullscreen='')
              .text
                h3 Become an augmented recruiter
                .accelerate-type-holder
                  i.fa.fa-chevron-right.fa-fw(aria-hidden='true')
                  .accelerate-type
                a.button(href="#",onclick="goog_report_conversion()")#accelerate-demo Get a Free Demo

      .accelerate-feat.white-theme
        .container
          .accelerate-feat-divider
            .item
              .icon
                i.fa.fa-search.fa-fw(aria-hidden='true')
              .text
                h4 Chatbot
                p 247 Real Time Responsiveness via Web, Facebook or SMS
            .item
              .icon
                i.fa.fa-commenting.fa-fw(aria-hidden='true')
              .text
                h4 SMS Marketing
                p Maximized read/open rate and 80% shorter recruitment cycle
            .item
              .icon
                i.fa.fa-thumbs-o-up.fa-fw(aria-hidden='true')
              .text
                h4 Social Media Marketing
                p Integrated with Facebook Ad Manager to maximize conversion rates
          .accelerate-feat-divider
            .item
              .icon
                i.fa.fa-film.fa-fw(aria-hidden='true')
              .text
                h4 Multimedia & Multichannel
                p Capture responses in audio, text, video across any channel
            .item
              .icon
                i.fa.fa-phone.fa-fw(aria-hidden='true')
              .text
                h4 Phone Dialer
                p Call the candidates via live phone call and record all phone activity
            .item
              .icon
                i.fa.fa-handshake-o.fa-fw(aria-hidden='true')
              .text
                h4 Collaborate
                p Share candidate’s profiles with the hiring manager

      .accelerate-drive.dark-theme
        .container
          h2.gl Drive the numbers that matter
          .accelerate-drive-divider
            .item
              .icon -74%
              p Shorter time to fill
            .item
              .icon 4.5x
              p Candidates processed per recruiter
            .item
              .icon -65%
              p Cost per hire

      .accelerate-testimonials.white-theme
        .container
          h2.gl Testimonials
          .divider
            .box
                .picture: img(src="./images/accelerate-page/1.jpg",alt="Marvin")
                .message With Talkpush, we make our applicant's lives easier, while our allowing our recruiters to spend more time with the best qualified candidates.
                .speaker
                  .name — Marvin E. Vinluan
                  .position Director Strategic Sourcing and Recruitment Marketing at Alorica
                  .icon: i.fa.fa-quote-right.fa-fw
            .box
                .picture: img(src="./images/accelerate-page/2.jpg",alt="Keith")
                .message We have been using Talkpush since 2014 and it has streamlined our recruitment tremendously. We are able to spend more time with the quality candidates and have increased our interview to hire ratio.
                .speaker
                  .name — Keith Cheung
                  .position Head of Talent Acquisition Sheraton and St. Regis Macau at Sheraton
                  .icon: i.fa.fa-quote-right.fa-fw
            .box
                .picture: img(src="./images/accelerate-page/3.jpg",alt="Anna")
                .message Talkpush helps us automating the recruitment process, especially the initial call outs and collecting the information we need from candidates.
                .speaker
                  .name — Anna Pinaroc
                  .position Recruitment Manager at Afni
                  .icon: i.fa.fa-quote-right.fa-fw

      // Pop Up
      #dark-filter
        #pop-up-aligner
          #pop-up
            .close-and-title
              .title: span(style="font-weight: bold;") Get a Free Demo
              a(href="#").close-button: i.fa.fa-times.fa-fw(aria-hidden='true')
            form.accelerate-form
              input(type="text", name="acc_firstName", placeholder="First Name", required)
              input(type="text", name="acc_lastName", placeholder="Last Name", required)
              input(type="text", name="acc_email", placeholder="Work Email", required)
              input(type="text", name="acc_company", placeholder="Company", required)
              input(type="text", name="acc_jobTitle", placeholder="Job Title", required)
              input(type="text", name="acc_phoneNumber", placeholder="Phone Number", required).adjust.accelerate-phone
              //- textarea(name='acc_message', placeholder="Message")
              .accelerate-error This candidate was duplicated. Please try again after 15 mins.
              button(type="submit") Submit
            .accelerate-data Thank you for your interest. Redirecting to Calendly.
      // Footer Section
      include ./_footer.pug

